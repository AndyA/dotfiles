# Prompt
function prompt_command {
    history -a
}

export -f prompt_command

export PROMPT_COMMAND='prompt_command'
if [ $TERM = 'xterm' -o $TERM = 'xterm-color' -o $TERM = 'xterm-256color' ] ; then
    PS1='\[\e]2;\u@\H:\w\a\]\[\e[01;32m\u\e[m@\e[01;34m\h\e[m:\e[01;32m\w\e[m\]\n[\A] \u \$ '
else
    PS1='[\A] \u \$ '
fi

export PS1

function vanilla_prompt {
  PS1="\n\$ "
  export PS1
}
