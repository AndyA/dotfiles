# Path settings
PATH=$HOME/bin:$PATH
# Add sbins to the end of the path
for d in /usr/local/sbin /usr/sbin /sbin; do
  [ -d $d ] && PATH=$PATH:$d
done
[ -d $HOME/bin/local ]    && PATH=$HOME/bin/local:$PATH
[ -d $HOME/bin/$RCUNAME ] && PATH=$HOME/bin/$RCUNAME:$PATH
[ -d /usr/local/flexsdk/bin ] && PATH=/usr/local/flexsdk/bin:$PATH
