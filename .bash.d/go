export GOROOT=$HOME/Works/Go/go
export GOOS=$(uname -s | tr A-Z a-z)
arch=$(uname -p)
[ -z "$arch" ] || [ "$arch" == "unknown" ] && arch=$(uname -m)
case $arch in
  'i386'|'i686')
    export GOARCH=386
    ;;
  'x86_64')
    export GOARCH=amd64
    ;;
  *)      
    echo "Can't set GOARCH for $arch"
    ;;
esac
export GOBIN=$GOROOT/bin

