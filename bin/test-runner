#!/usr/bin/env perl

use strict;
use warnings;

use constant BASE => glob '~/.test-runner';
use constant CONF => BASE . '/config.pl';

if ( -e CONF ) {
    load_config( CONF );
}

sub load_config {
    my $cf = shift;
    require $cf;
}

sub set_config {
    my %config = @_;
    use Data::Dumper;
    print Dumper( \%config );
}
