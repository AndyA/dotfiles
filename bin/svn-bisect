#!/usr/bin/env perl
# vim:ts=2:sw=2:sts=2:et:ft=perl

use strict;
use warnings;
use Getopt::Long;
use Pod::Usage;

# svn-bisect -r<first>[:<last>] test-script
my $help      = 0;
my $man       = 0;
my $verbose   = 0;
my $revisions = undef;

GetOptions(
  'help|?'  => \$help,
  'man'     => \$man,
  'verbose' => \$verbose,
  'r=s'     => \$revisions,
) or pod2usage( 2 );

pod2usage( 1 ) if $help;
pod2usage( -exitstatus => 0, -verbose => 2 ) if $man;

die "The -r <rev> switch is required\n" unless defined $revisions;
die "Need a script to run\n" unless @ARGV;

my ( $first, $last ) = get_rev_range( $revisions );
print "$first $last\n";

sub get_rev_range {
  my $rev_spec = shift;
  if ( $rev_spec =~ /^(\d+):(\d+)$/ ) {
    return ( $1, $2 );
  }
  elsif ( $rev_spec =~ /^\d+$/ ) {
    return ( $rev_spec, get_head() );
  }
  die "Bad revision: $rev_spec\n";
}

sub get_head {
  open my $sh, '-|', qw( svn info ) or die "Can't run svn info ($!)\n";
  my $head = undef;
  while ( <$sh> ) {
    $head = $1 if /^Revision:\s+(\d+)/;
  }
  return $head;
}

sub bisect {
  my ( $first, $last, $test ) = @_;
  my ( $lo, $hi ) = ( $first, $last );
  while ( 1 ) {
    return $lo > $last ? undef : $hi if $lo > $hi;
    my $mid = int( ( $lo + $hi ) / 2 );
    if ( $test->( $mid ) ) {
      # Test passed, go forward
      $lo = $mid + 1;
    }
    else {
      # Test failed, go backwards
      $hi = $mid - 1;
    }
  }
}

__END__

=head1 NAME

svn-bisect - Make a clone of a project

=head1 SYNOPSIS

pclone [options] [dir ...]

 Options:

    -help               see this summary
    -man                view man page for pclone
    -verbose            say lots
    -r <first>[:<last>] range of revisions to try

=head1 DESCRIPTION


=head1 OPTIONS

