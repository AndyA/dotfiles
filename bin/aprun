#!/usr/bin/env perl
# vim:ts=2:sw=2:sts=2:et:ft=perl

use 5.010;

use strict;
use warnings;

use Config::Tiny;
use Data::Dumper;
use File::Which;
use Getopt::Long;

my $O = read_config( '.aprun/config.ini', '~/.aprun/config.ini' );
my $F = read_core_files();
say Dumper( $O );

sub read_config {
  my @f = grep -f, map glob, @_;
  return {} unless @f;
  return Config::Tiny->read( $f[0] );
}

sub read_core_files {
  my $f = {};
  my $section;
  while ( <DATA> ) {
    chomp;
    ( $section = $1 ), next if /^=(.+)/;
    push @{ $f->{$section} }, $_ if defined $section;
  }
  $_ = join "\n", @$_, '' for values %$f;
  return $f;
}

